<%- include("../partials/header") %>

	<div class="row">
		<div class="col-md-12 text-center"><h1>Create a new campground</h1></div>
		<div style="width:30%; margin:25px auto;">
			<form action="/campgrounds" method="POST">
				<div class="form-group"><input class="form-control" type="text" placeholder="Name Of Campground" name="campName"></div>
				<div class="form-group"><input class="form-control" type="text" placeholder="Image Url" name="campImage"></div>
				<div class="form-group"><input class="form-control" type="text" placeholder="Prise Per Night" name="campPrise"></div>
				<div class="form-group"><textarea class="form-control" placeholder="Short Description" name="campDesc"></textarea></div>
				<div class="form-group"><button class="btn btn-lg btn-primary btn-block">Submit</button></div>
			</form>
			<a href="/campgrounds">GO Back</a>
		</div>
	</div>

<%- include("../partials/footer") %>